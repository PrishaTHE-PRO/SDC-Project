/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset prioritizes a secure, owner-centric model for user data and
 * adopts a public-read, owner-write model for listings. Conversations are
 * restricted to participants, and messages inherit the security context
 * of their parent conversations.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only to the owning user.
 * - /listings/{listingId}: Publicly readable listings, writable only by the owner.
 * - /conversations/{conversationId}: Conversation metadata, restricted to participants.
 * - /conversations/{conversationId}/messages/{messageId}: Messages within a conversation, inheriting conversation-level security.
 *
 * Key Security Decisions:
 * - User listing is disallowed to prevent unauthorized data access.
 * - Public read access is granted for listings, but writes are strictly controlled by ownership.
 * - Conversations are secured using a "shared access" pattern, where participants are explicitly defined.
 * - The `participantIds` array on `conversations` is used to authorize access to messages.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects user profiles, ensuring only the owner can read or write their data.
     * @path /users/{userId}
     * @allow (create, update, delete, get) - User with ID 'user123' can create/update/delete/get their own profile.
     *   request.auth.uid == 'user123'
     *   request.resource.data.id == 'user123'
     * @deny (create, update, delete, get) - User with ID 'user456' cannot access user 'user123' profile.
     *   request.auth.uid == 'user456'
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public reading of listings but restricts creation, updates, and deletion to the owner.
     * @path /listings/{listingId}
     * @allow (get, list) - Any user can read any listing.
     * @allow (create) - User with ID 'user123' can create a listing with sellerId 'user123'.
     *   request.auth.uid == 'user123'
     *   request.resource.data.sellerId == 'user123'
     * @allow (update, delete) - User with ID 'user123' can update/delete a listing where resource.data.sellerId == 'user123'.
     *   request.auth.uid == 'user123'
     *   resource.data.sellerId == 'user123'
     * @deny (create) - User with ID 'user456' cannot create a listing with sellerId 'user123'.
     *   request.auth.uid == 'user456'
     *   request.resource.data.sellerId == 'user123'
     * @deny (update, delete) - User with ID 'user456' cannot update/delete a listing where resource.data.sellerId == 'user123'.
     *   request.auth.uid == 'user456'
     *   resource.data.sellerId == 'user123'
     * @principle Implements public-read, owner-write access control for listings.
     */
    match /listings/{listingId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(sellerId) {
        return isSignedIn() && request.auth.uid == sellerId;
      }

      function isExistingOwner(sellerId) {
        return isOwner(sellerId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.sellerId);
      allow update: if isExistingOwner(resource.data.sellerId);
      allow delete: if isExistingOwner(resource.data.sellerId);
    }

    /**
     * @description Secures conversations, allowing access only to participants.
     * @path /conversations/{conversationId}
     * @allow (get, list) - User with ID 'user123' can access a conversation if 'user123' is in the participantIds array.
     *   request.auth.uid == 'user123'
     *   'user123' in resource.data.participantIds
     * @allow (create) - User with ID 'user123' can create a conversation if 'user123' is in the participantIds array of the request.
     *   request.auth.uid == 'user123'
     *   'user123' in request.resource.data.participantIds
     * @allow (update, delete) - User with ID 'user123' can update/delete a conversation if 'user123' is in the participantIds array of the existing resource.
     *   request.auth.uid == 'user123'
     *   'user123' in resource.data.participantIds
     * @deny (get, list) - User with ID 'user456' cannot access a conversation if 'user456' is NOT in the participantIds array.
     *   request.auth.uid == 'user456'
     *   'user456' in resource.data.participantIds
     * @principle Enforces shared access based on the participantIds array.
     */
    match /conversations/{conversationId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isParticipant() {
        return isSignedIn() && request.auth.uid in resource.data.participantIds;
      }

        function isParticipantRequest() {
        return isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      }

        function isExistingParticipant() {
        return isSignedIn() && resource != null && request.auth.uid in resource.data.participantIds;
      }

      allow get, list: if isExistingParticipant();
      allow create: if isSignedIn() && isParticipantRequest();
      allow update: if isExistingParticipant();
      allow delete: if isExistingParticipant();
    }

    /**
     * @description Restricts message access to participants of the parent conversation.
     * @path /conversations/{conversationId}/messages/{messageId}
     * @allow (get, list) - User with ID 'user123' can read messages in a conversation if 'user123' is in the participantIds array of the PARENT conversation.
     *   request.auth.uid == 'user123'
     *   'user123' in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
     * @allow (create) - User with ID 'user123' can create a message in a conversation if 'user123' is in the participantIds array of the PARENT conversation.
     *   request.auth.uid == 'user123'
     *   'user123' in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
     * @allow (update, delete) - User with ID 'user123' can update/delete a message in a conversation if 'user123' is in the participantIds array of the PARENT conversation.
     *   request.auth.uid == 'user123'
     *   'user123' in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
     * @deny (get, list) - User with ID 'user456' cannot read messages in a conversation if 'user456' is NOT in the participantIds array of the PARENT conversation.
     *   request.auth.uid == 'user456'
     *   'user456' in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
     * @principle Inherits conversation-level security for messages.
     */
    match /conversations/{conversationId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isConversationParticipant(conversationId) {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }

      allow get, list: if isConversationParticipant(conversationId);
      allow create: if isConversationParticipant(conversationId);
      allow update: if isConversationParticipant(conversationId);
      allow delete: if isConversationParticipant(conversationId);
    }
  }
}